{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "swc": "swc src -d dist -D src/assets --strip-leading-paths",
    "build": "rm -rf dist && npm run swc",
    "serve": "npm run build && node dist/index.js",
    "nodemon": "nodemon --exec \"npm run serve\"",
    "dev": "concurrently -n dev,ts \"npm:nodemon\" \"tsc --watch\""
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@swc/cli": "^0.7.3",
    "@swc/core": "^1.4.13",
    "@types/node": "^22.15.2",
    "concurrently": "^9.1.2",
    "nodemon": "^3.1.0",
    "typescript": "^5.4.4"
  }
}
